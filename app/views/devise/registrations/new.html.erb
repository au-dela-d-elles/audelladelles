<section class="mt-10 bg-gray-50 pt-3 mb-3" style="height: 100;">
  <div class="flex flex-col items-center justify-center mx-auto min-h-screen">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="w-96 bg-white rounded-lg shadow dark:border md:mt-0 sm:max-w-sm xl:p-0">
        <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
          <h1 class="text-xl font-bold leading-tight tracking-tight text-gray-900 md:text-2xl">
            Créez un compte pour bénéficier de tous nos services !
          </h1>
          <%= render "devise/shared/error_messages", resource: resource %>
          <div class="space-y-4 md:space-y-6">
            <div class="field mb-3">
              <%= f.label :email, class: "block mb-2 text-sm font-medium text-gray-900" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", id: "email", class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 mb-3", placeholder: "name@email.com", required: true %>
            </div>
            <div class="field mb-3">
              <%= f.label :password, "Mot de passe", class: "block mb-2 text-sm font-medium text-gray-900" %>
              <% if @minimum_password_length %>
              <% end %>
              <%= f.password_field :password, autocomplete: "new-password", id: "password", class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" %>
            </div>
            <div class="field mb-3">
              <%= f.label :password_confirmation, "Confirmer votre mot de passe",class: "block mb-2 text-sm font-medium text-gray-900" %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", id: "password_confirmation", class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" %>
            </div>
            <div class="actions">
              <%= f.submit "Je crée un compte", class: "w-full text-white bg-amber-500 hover:bg-primary-700 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center" %>
            </div>
            <p class="text-sm font-light text-gray-900">
              Vous avez déjà un compte ? <%= link_to "Connectez-vous", new_user_session_path, class: "font-medium text-primary-600 hover:underline dark:text-primary-500" %>
            </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</section>